<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.msaproject.catal.myappointment.util.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/business_image"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/add_watch_list"

                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="save business"
                    android:textColor="@color/White"
                    android:layout_below="@+id/add_watch_list"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/save_business"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/business_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/DarkGrey"
                android:elevation="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_image"
                android:background="@color/background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/business_title"
                    android:textColor="@color/White"
                    android:text="some title"
                    android:padding="10dp"
                    android:background="@color/DarkGrey"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/business_title"
                    android:id="@+id/relLayout1"
                    android:background="@color/DarkGrey"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/business_description"
                        android:textColor="@color/white"
                        android:text="some description about the business"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/business_price"
                        android:textColor="@color/white"
                        android:text="$20.99"
                        android:layout_below="@+id/business_description"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/business_location"
                        android:textColor="@color/white"
                        android:text="Vancouver, British Columbia, Canada"
                        android:layout_below="@+id/business_price"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relLayout1"
                    android:background="@color/background"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/business_contact"
                        android:textColor="@color/White"
                        android:text="Email business"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/teal_onclick_red"/>


                    <TextView
                        android:id="@+id/business_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/business_contact"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/teal_onclick_red"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Call business"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>